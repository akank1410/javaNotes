

public class Main {

    static int fnc_log(int n)
    {
        if(n==1) 
            return 0;
        else
            return 1 + fnc_log(n/2);
    }
    public static void main(String args[]) {
        
        System.out.println(fnc_log(15));
        //fun_log(n/2) => log n base 2
        //fun_log(n/3) => log n base 3
        //fun_log(n/4) => log n base 4
    }
}
